<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_song_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@drawable/bg_click"
    android:paddingEnd="0dp"
    android:paddingStart="10dp">

    <TextView
        android:id="@+id/position_textview"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/album_imageview"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_song_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/position_textview"
        android:layout_toStartOf="@id/play_mv_view"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/songname_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="演员"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/singername_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="薛之谦"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/play_mv_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="10dp"
        android:src="@mipmap/play_mv"
        android:visibility="gone"
        tools:visibility="visible" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:background="#3a000000" />
</RelativeLayout>