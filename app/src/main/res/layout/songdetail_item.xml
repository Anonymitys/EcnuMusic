<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_song_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_click"
    android:paddingLeft="10dp">
    <TextView
        android:id="@+id/position_textview"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_centerVertical="true"/>
    <ImageView
        android:id="@+id/album_imageview"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/ll_song_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/position_textview">
            <TextView
                android:id="@+id/songname_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#000000"
                android:ellipsize="end"
                android:singleLine="true"/>
            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/singername_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="10sp"/>

        </LinearLayout>
       <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#3a000000"
            android:layout_marginLeft="40dp"
            android:layout_alignParentBottom="true"/>




</RelativeLayout>